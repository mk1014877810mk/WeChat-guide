/* 加载提示 */

 .load-text {
  width: 100%;
  height: 130rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #fff;
}

.load-text image,.load-text view{
  display: inline-block;
  vertical-align: middle;
  color: #999;
} 

/*单行显示  */

.one-txt-cut {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/*两行显示  */

.two-txt-cut {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
/* 选中颜色 */
.red {
  color: #ff6969;
}
