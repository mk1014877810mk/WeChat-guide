/* pages/scans/scan/scan.wxss */

view, text, button {
  color: #333;
}

page {
  background-color: #efeff4;
}

.scan .scan-top {
  height: 20vh;
  text-align: center;
  overflow: hidden;
}

.scan .scan-top view:nth-child(1) {
  font-size: 36rpx;
  color: #333;
  margin-top: 9vh;
}

.scan .scan-top view:nth-child(2) {
  font-size: 28rpx;
  color: #999;
  margin-top: 3vh;
}

.scan view.list {
  width: 600rpx;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 36rpx;
  color: #333;
  padding: 0 40rpx;
  margin: 5vh auto;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: #fff;
}

.scan view text:nth-child(2) {
  /* margin-right: 60rpx; */
  display: inline-block;
  width: 410rpx;
  text-align: center;
  font-size: 34rpx;
}

.scan view image.help {
  float: right;
  margin-top: 28rpx;
}

.scan .iconfont {
  vertical-align: middle;
  font-size: 40rpx;
  color: #09f;
  margin-top: -4rpx;
}

.scan .iconfont.icon-icon-- {
  font-size: 44rpx;
}

.scan .iconfont.icon-iconfonterweima {
  font-size: 42rpx;
}

/* 示例 */

.scan .test-tips {
  width: 600rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 40rpx;
  margin: -20rpx auto 0;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 6rpx 6rpx #ddd;
}

.scan .test-tips text.such-as {
  float: left;
  margin-right: 30rpx;
}

/*模态框输入编号  */

.insert-num {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
}

.insert-num .modal {
  position: absolute;
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  background-color: #fff;
  width: 560rpx;
  height: 340rpx;
}

.insert-num .modal .modal-title {
  text-align: center;
  padding: 70rpx 30rpx 0;
  box-sizing: border-box;
  font-size: 36rpx;
}

.insert-num .modal .input {
  padding: 30rpx 20rpx 44rpx;
  box-sizing: border-box;
}

.insert-num .modal input {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}

.insert-num .modal .btn {
  border-top: 1px solid #e5e5e5;
}

.insert-num .modal .btn view {
  display: inline-block;
  width: 49%;
  text-align: center;
  line-height: 96rpx;
  color: #888;
  font-size: 34rpx;
}

.insert-num .modal .btn view:nth-child(2) {
  border-left: 1px solid #e5e5e5;
  color: #09f;
}

.tips {
  width: 100%;
  color: #fff;
  position: absolute;
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  text-align: center;
  font-size: 28rpx;
}

.animate {
  animation: opacity 3s;
}

@keyframes opacity {
  0% {
    opacity: 0;
  }

  20% {
    opacity: 1;
  }

  80% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}
