/* pages/home/projectDetail/projectDetail.wxss */

@import "../../../wxParse/wxParse.wxss";

.introduce image {
  width: 100% !important;
}

.project {
  overflow: hidden;
}

.project-detail {
  padding: 36rpx 20rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 20rpx solid #f5f3f3;
}

/* 讲解员信息 */

.project-detail .explainer {
  display: inline-block;
  height: 60rpx;
  width: 100%;
}

.project-detail .explainer .detail-img {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  vertical-align: middle;
}

.project-detail .explainer-info {
  display: inline-block;
  width: 400rpx;
  font-size: 24rpx;
  vertical-align: middle;
}

.project-detail .explainer-info .name {
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
  padding: 0 40rpx;
  max-width: 170rpx;  
  vertical-align: middle;
}

.project-detail .explainer-info .bir-date {
  display: inline-block;
  color: #999;
  vertical-align: middle;
}

.project-detail .explainer-info .post-data {
  color: #999;
  font-size: 24rpx;
}

.project-detail .attention {
  float: right;
  line-height: 60rpx;
  margin-left: 140rpx;
  margin-right: 20rpx;
}

.project-detail .attention>text.blue {
  color: #09f;
}

/* 官方信息头 */
.hall-exolainer{
  width: 100%;
  height:60rpx;
  color: #999;
  /* text-align: center; */
  font-size: 26rpx; 
}

.hall-exolainer image{
  float: right;
}
.hall-exolainer image.head-pic{
  float: left;
}

.hall-exolainer .attention{
  float: left;
  margin-left: 30rpx;
  margin-top: -6rpx;
  text-align: center;
}

.hall-exolainer .attention>view{
  line-height: 40rpx;
}

/* 展项详情（图片/音频） */

.project-detail .detail-info {
  text-align: center;
}

.project-detail .detail-info .detail-title {
  padding: 40rpx 0;
  box-sizing: border-box;
  font-weight: 600;
}

.project-detail .detail-info .radio {
  position: relative;
  width: 680rpx;
  height: 142rpx;
  margin: 30rpx auto 80rpx;
  border: 1rpx solid #e5e5e5;
}

.project-detail .detail-info .radio .radio-btn {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.project-detail .detail-info .radio .radio-btn text {
  font-size: 80rpx;
  color: #09f;
}

.project-detail .detail-info .radio .radio-detail {
  width: 520rpx;
  margin-left: 140rpx;
  position: relative;
}

.project-detail .detail-info .radio .radio-detail .radio-detail-top {
  font-size: 30rpx;
  text-align: left;
  margin-top: 16rpx;
}

.project-detail .detail-info .radio .radio-detail .radio-detail-top .buffering {
  float: right;
}

.project-detail .detail-info .radio .radio-detail>slider {
  width: 520rpx;
  margin: 0;
}

.project-detail .detail-info .radio .radio-detail>text {
  position: absolute;
  font-size: 28rpx;
  color: #09f;
  bottom: -30rpx;
}

.project-detail .detail-info .radio .radio-detail text.start-time {
  left: 0;
}

.project-detail .detail-info .radio .radio-detail text.end-time {
  right: 0;
}

/* 详细展览介绍 */

.project-detail .introduce-detail {
  padding: 0 10rpx 56rpx;
  box-sizing: border-box;
  padding-bottom: 0;
}

.project-detail .introduce-detail .introduce-title {
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 42rpx;
  font-weight: 900;
}

.project-detail .introduce-detail .introduce-content{
  margin-bottom: 40rpx;
  font-size: 36rpx;
  text-align: center;
  font-weight: 600;
}

.project-detail .introduce .gift {
  font-size: 30rpx;
  text-align: right;
  padding-right: 40rpx;
  box-sizing: border-box;
}

/* 评论区样式 */

.disc {
  margin-bottom: 120rpx;
}

.discuss {
  position: fixed;
  width: 100%;
  height: 120rpx;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx 40rpx;
  left: 0;
  bottom: 0;
  z-index: 2;
  background-color: #fff;
  box-sizing: border-box;
}

.discuss .discuss-insert {
  /* position: relative; */
  display: inline-block;
  width: 510rpx;
  height: 80rpx;
  padding-left: 110rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  background-color: #e8e8e8;
  border-radius: 10rpx;
  overflow: hidden;
}

.discuss input {
  display: inline-block;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  vertical-align: middle;
  background-color: #e8e8e8;
  border-radius: 20rpx;
}

.discuss .placeholder-style {
  font-size: 28rpx;
}

.discuss>.discuss-right {
  position: absolute;
  width: 180rpx;
  height: 80rpx;
  right: 20rpx;
  top: 20rpx;
}

.discuss .iconfont {
  position: absolute;
  font-size: 36rpx;
  color: #666;
  left: 90rpx;
  top: 40rpx;
}

.discuss>.discuss-right>view {
  width: 60rpx;
  height: 80rpx;
  font-size: 30rpx;
  position: absolute;
  top: 0;
}

.discuss>.discuss-right>view:nth-last-child(1) {
  right: 10rpx;
}

.discuss>.discuss-right>view:nth-last-child(2) {
  left: 30rpx;
}

.discuss>.discuss-right>view>text {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  color: #999;
}

.discuss>.discuss-right>view>text:nth-child(1) {
  font-size: 38rpx;
  top: 0rpx;
}

.discuss>.discuss-right>view>text:nth-child(2) {
  font-size: 28rpx;
  width: 100%;
  bottom: 0rpx;
}

.discuss>.discuss-right>view>text.blue {
   /* color: #ff6969;  */
   color: #09f; 
}

/* 评论列表 */

.disc-top {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 34rpx;
  border-bottom: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

.disc-top .disc-top-left {
  display: inline-block;
  font-size: 30rpx;
}

.disc-top .disc-top-left>text {
  color: #999;
  margin-left: 10rpx;
}

.disc-top .disc-top-right {
  float: right;
  font-size: 30rpx;
  color: #999;
}

.discuss-detail {
  padding: 0 34rpx;
  box-sizing: border-box;
}

.discuss-detail>view {
  padding: 50rpx 10rpx;
  border-bottom: 1px solid #e5e5e5;
}

.discuss-detail>view:nth-last-child(1) {
  border-bottom: none;
}

.discuss-detail .discuss-top .discuss-top-left {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  vertical-align: top;
}

.discuss-detail .discuss-top .discuss-top-right {
  width: 500rpx;
  display: inline-block;
  vertical-align: top;
  padding-left: 36rpx;
  box-sizing: border-box;
  font-size: 34rpx;
}

.discuss-detail .discuss-top .discuss-top-right .user-name {
  display: inline-block;
  padding-bottom: 30rpx;
}

.discuss-detail .discuss-top .discuss-top-right .long-time {
  display: inline-block;
  margin-left: 30rpx;
  font-size: 26rpx;
  color: #aaa;
}

.discuss-detail .discuss-top .discuss-top-right .discuss-bottom {
  font-size: 30rpx;
  line-height: 42rpx;
}

/*  暂无评论样式  */

.no-discuss {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
}

/* 打赏操作  */

.pay-modal {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}

.pay-select {
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: -430rpx;
  width: 100%;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
  transition: all 20s;
}

.slide {
  animation: move 0.3s;
  animation-fill-mode: forwards;
}

@keyframes move {
  0% {
    bottom: -430rpx;
  }

  100% {
    bottom: 100rpx;
  }
}

.pay-select .pay-list {
  display: inline-block;
  width: 23%;
  vertical-align: top;
  padding: 20rpx 0;
  border: 1px solid transparent;
}

.pay-select .pay-list image {
  transition: transform 0.5s;
}

.current-pay {
  border-color: #09f !important;
}

.current-pay image {
  transform: scale(1.3);
  -webkit-transform: scale(1.3);
}

.pay-select .pay-list:nth-child(8) {
  padding-bottom: 8rpx !important;
}

.pay-select .pay-list .pay-bottom {
  font-size: 28rpx;
  text-align: center;
  padding-top: 10rpx;
}

.pay-select .pay-list .pay-bottom .money-one-money {
  color: red;
  padding: 5rpx 0;
}

.pay-select .pay-sure {
  border-top: 1rpx solid #eaeaea;
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: -98rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  font-size: 30rpx;
  height: 100rpx;
  padding: 0 40rpx;
}

.pay-select .pay-sure>text {
  display: inline-block;
  vertical-align: middle;
  height: 98rpx;
  line-height: 98rpx;
  color: #999;
}

.pay-select .pay-sure>text:nth-child(2) {
  float: right;
  margin-right: 14rpx;
  width: 160rpx;
  background-color: #09f;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  color: #fff;
}

/* 切换讲解员列表 */

scroll-view {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
  width: 100%;
  background-color: #fff;
}

.proExp {
