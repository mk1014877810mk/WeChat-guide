/* pages/home/login/login.wxss */

page {
  width: 100%;
  height: 100%;
  background-image: url('https://dl.broadmesse.net/wx-img/login2.png');
  background-size: 700rpx 100%;
  animation: 120s move linear infinite ;
}

@keyframes move{
  from{
    background-position-x: 0rpx;
  }
  to{
    background-position-x: -4500rpx;
  }
}

button {
  width: 330rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 250rpx;
  background-color: #09f;
  color: #fff;
}
