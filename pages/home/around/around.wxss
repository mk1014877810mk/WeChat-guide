/* pages/home/around/around.wxss */

view, text, button {
  color: #333;
}

.map_container {
  width: 100%;
}

.map {
  height: 100%;
  width: 100%;
}

/* 显示相关信息 */

.swiper {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  height: 340rpx;
  z-index: 1;
  background-color: #fff;
}

.swiper .message {
  overflow: hidden;
  color: #666;
}

.swiper .total {
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.swiper .show-or-hide {
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
}

swiper .place_info {
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

swiper .list-item {
  border: 1rpx solid #eee;
  padding: 16rpx 26rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

swiper .list-item .list-title {
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #333;
}

swiper .list-item .list-title .title-detail {
  width: 450rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 50rpx;
  font-weight: 600;
  font-size: 32rpx !important;
}

swiper .list-item .list-title .title-distance {
  float: right;
  width: 100rpx;
  margin-left: 100rpx;
  text-align: right;
  color: #999;
}

swiper .list-item .list-content {
  line-height: 50rpx;
  font-size: 30rpx !important;
  color: #666;
}

swiper .list-item .list-content text:nth-child(1) {
  margin-top: 2rpx;
  color: #09f;
  font-size: 36rpx;
}

swiper .list-item .list-content text.icon-location {
  font-size: 38rpx;
}

.show {
  bottom: 100rpx !important;
  transition: all 0.2s;
}

.hide {
  bottom: -180rpx !important;
  transition: all 0.2s;
}

/* 搜索按钮 */

.around {
  position: fixed;
  width: 100%;
  height: 120rpx;
  left: 0;
  bottom: 0;
  text-align: center;
  border-top: 1rpx solid #eee;
  z-index: 2;
  background-color: #fff;
}

.around>view {
  display: inline-block;
  width: 21%;
  text-align: center;
  line-height: 120rpx;
}

.around .icon {
  width: 60rpx;
  display: inline-block;
  vertical-align: top;
  margin-top: -3rpx;
  text-align: center;
}

.around .icon image{
  display: inline-block;
  vertical-align: middle;
  width: 38rpx;
  height: 38rpx;
}

.around .iconfont, .around text {
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
  color: #999;
}

.around .split {
  display: inline-block;
  vertical-align: middle;
  margin-top: -8rpx;
}

.around .iconfont {
  margin-right: 10rpx;
  font-size: 42rpx;
}

.active .icon>image {
  width: 50rpx;
  height: 50rpx;
}

.around .iconfont.icon-jingdian {
  color: rgb(135, 199, 62);
}

.around .iconfont.icon-jiudian {
  color: rgb(74, 144, 262);
}

.around .iconfont.icon-meishi {
  color: rgb(243, 76, 30);
}

.around .iconfont.icon-gouwu {
  color: rgb(239, 148, 36);
}
