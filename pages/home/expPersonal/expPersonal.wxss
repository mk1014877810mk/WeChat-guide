/* pages/home/expPersonal/expPersonal.wxss */

/* 头部图片及内容 */

.personal .personal-top {
  position: relative;
  width: 100%;
  height: 340rpx;
}

.personal .personal-top>view {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.personal .personal-top>view .attention {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 110rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 26rpx;
  background-color: #ccc;
  color: #000;
  border-radius: 23rpx;
}

.personal .personal-top>view .attention.blue{
  background-color: #09f;
  color: #fff;
}

.personal .personal-top>view .per-info {
  margin-top: 60rpx;
  text-align: center;
}

.personal .personal-top>view .per-info .per-pic {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.personal .personal-top>view .per-info .per-pic image {
  display: block;
}

.personal .personal-top>view .per-info .per-name {
  position: relative;
  font-size: 30rpx;
  color: #fff;
  margin: 24rpx 0 20rpx;
}

.personal .personal-top>view .per-info .per-name>view {
  position: absolute;
  top: -16rpx;
  right: 180rpx;
}

.personal .personal-top>view .per-info .per-name>view>text {
  position: absolute;
  left: 10rpx;
  top: 8rpx;
  letter-spacing: 2rpx;
  font-size: 20rpx;
}

.personal .personal-top>view .per-info .per-year {
  font-size: 26rpx;
  color: #fff;
}

/* 个人讲解列表 */

.personal-list {
  padding: 0 20rpx;
}

.personal-list .personal-title {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  text-align: center;
}

.personal-list .personal-detail {
  display: inline-block;
  vertical-align: top;
  width: 345rpx;
  box-shadow: 0 4rpx 6rpx 4rpx #ddd;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.personal-list .personal-detail:nth-child(2n+1) {
  margin-right: 0;
}

.personal-list .personal-detail .detail-top {
  position: relative;
  width: 100%;
  height: 240rpx;
}

.personal-list .personal-detail .detail-top .gift {
  position: absolute;
  left: 0;
  top: 0;
  height: 44rpx;
  line-height: 40rpx;
  background-color: #09f;
  color: #fff;
  font-size: 28rpx;
  padding: 0rpx 30rpx;
  border-radius: 0 22rpx 22rpx 0;
}

.personal-list .personal-detail .detail-top .gift .iconfont {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #fff;
}

.personal-list .personal-detail .detail-bottom {
  padding: 20rpx;
  box-sizing: border-box;
}

.personal-list .personal-detail .detail-bottom .detail-title {
  font-size: 30rpx;
  color: #333;
}

.personal-list .personal-detail .detail-bottom .detail-parise {
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.personal-list .personal-detail .detail-bottom .detail-parise .iconfont {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.personal-list .personal-detail .detail-bottom .detail-parise .iconfont.icon-yanjing {
  font-size: 32rpx;
  margin-top: 2rpx;
}

.personal-list .personal-detail .detail-bottom .detail-parise .detail-parise-num {
  margin-right: 20rpx;
}
