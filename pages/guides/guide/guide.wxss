/* 周边入口 */

.around {
  position: fixed;
  top: 60rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 2;
}

.around text {
  color: #fff;
  font-size: 30rpx;
  line-height: 60rpx;
}

/* 地图 */

.map-box {
  position: relative;
  overflow: hidden;
}

.map-box .btn {
  position: absolute;
  bottom: 60rpx;
  left: 40rpx;
}

.map-box .btn view {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 20rpx;
  background-color: #ccc;
}

.map-box .map {
  position: absolute;
}

.map-box .map .pointer {
  position: absolute;
  z-index: 10;
  font-size: 50rpx;
}

.map-box .map .pointer .exhibition-name {
  font-size: 34rpx;
}

.map-box .map .pointer .exhibition-info {
  display: inline-block;
  width: 200rpx;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-70%);
  background-color: #ccc;
}

.map-box .map .current-position {
  position: absolute;
  z-index: 3;
}

.map-box .map .current-position .show-position-text {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 110rpx;
  transform: translate(-46%, -50%);
  font-size: 28rpx;
  color: #666;
}

/* 展项定位 */

.proj-info {
  position: absolute;
  left: 0;
  top: 0;
}

.proj-info .info-tips {
  position: absolute;
  /* transform: translate(-30%, -100%); */
  top: 0;
  left: 0;
  border-radius: 70%;
  z-index: 2;
}

.proj-info .info-img {
  position: absolute;
  left: 18rpx;
  top: 16rpx;
  border-radius: 50%;
  overflow: hidden;
}

.proj-info .info-name {
  position: absolute;
  max-width: 150rpx;
  text-align: center;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 26rpx;
  color: #999;
}

/* 播放器 */

.guide .radio {
  position: fixed;
  left: 25rpx;
  bottom: 25rpx;
  z-index: 99;
  width: 700rpx;
  height: 140rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 0 2rpx 4rpx #ddd;
  transition: left 0.5s;
}

.guide .radio .radio-modal {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
  line-height: 140rpx;
  text-align: center;
  color: #fff;
}

.guide .radio>image {
  vertical-align: top;
  border-radius: 50%;
  margin-right: 30rpx;
}

.guide .radio .radio-info {
  position: relative;
  vertical-align: top;
  display: inline-block;
  width: 510rpx;
}

.guide .radio .radio-info .radio-detail {
  position: relative;
  display: inline-block;
  width: 420rpx;
}

.guide .radio .radio-info .radio-detail .radio-detail-top {
  font-size: 26rpx;
}

.guide .radio .radio-info .radio-detail slider {
  margin: 0;
}

.guide .radio .radio-info .radio-detail>text {
  position: absolute;
  font-size: 24rpx;
  color: #09f;
  bottom: -26rpx;
}

.guide .radio .radio-info .radio-detail>text.start-time {
  left: 0;
}

.guide .radio .radio-info .radio-detail>text.end-time {
  right: 0;
}

.guide .radio .radio-info .radio-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-30%);
  width: 60rpx;
  height: 60rpx;
}

.guide .radio .radio-info .radio-btn .iconfont {
  font-size: 60rpx;
  color: #09f;
}

/* 切换手动自动导览 */

.guide .switch {
  position: fixed;
  right: 30rpx;
  bottom: 210rpx;
  z-index: 10;
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  background-color: #fff;
  box-shadow: 0 0 4rpx 4rpx #ddd;
  border-radius: 50%;
}

.guide .switch switch {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-46%, -60%);
}

