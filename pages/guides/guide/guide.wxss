/* 打赏操作  */

.pay-modal {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}

.pay-select {
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: -430rpx;
  width: 100%;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
  transition: all 20s;
}

.slide {
  animation: move 0.3s;
  animation-fill-mode: forwards;
}

@keyframes move {
  0% {
    bottom: -430rpx;
  }

  100% {
    bottom: 100rpx;
  }
}

.pay-select .pay-list {
  display: inline-block;
  width: 23%;
  vertical-align: top;
  padding: 20rpx 0;
  border: 1px solid transparent;
}

.pay-select .pay-list image {
  transition: transform 0.5s;
}

.current-pay {
  border-color: #09f !important;
}

.current-pay image {
  transform: scale(1.3);
  -webkit-transform: scale(1.3);
}

.pay-select .pay-list:nth-child(8) {
  padding-bottom: 8rpx !important;
}

.pay-select .pay-list .pay-bottom {
  font-size: 28rpx;
  text-align: center;
  padding-top: 10rpx;
}

.pay-select .pay-list .pay-bottom .money-one-money {
  color: red;
  padding: 5rpx 0;
}

.pay-select .pay-sure {
  border-top: 1rpx solid #eaeaea;
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: -98rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  font-size: 30rpx;
  height: 100rpx;
  padding: 0 40rpx;
}

.pay-select .pay-sure>text {
  display: inline-block;
  vertical-align: middle;
  height: 98rpx;
  line-height: 98rpx;
  color: #999;
}

.pay-select .pay-sure>text:nth-child(2) {
  float: right;
  margin-right: 14rpx;
  width: 160rpx;
  background-color: #09f;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  color: #fff;
}

/* 音乐列表 */

